<Window x:Class="CesarKrypto.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:CesarKrypto" mc:Ignorable="d" Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="5">
        <Label FontSize="30">Cesar krypto</Label>
        <StackPanel Orientation="Horizontal">
            <Label Margin="20">Ange en text</Label>
            <TextBox Margin="5" Width="200" Name="inmatningText"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Margin="20">Ange Nyckel(int)</Label>
            <TextBox Margin="5" Width="200" Name="inmatningNyckel">0</TextBox>
        </StackPanel>
        <Button Margin="5" Width="200" Height="30" Click="Skicka_Click">Kör</Button>
        <TextBlock Margin="20">Krypterad text</TextBlock>
        <TextBlock Margin="5" Background="#FFF" Height="400" TextWrapping="Wrap" Name="textruta"></TextBlock>
    </StackPanel>
</Window>