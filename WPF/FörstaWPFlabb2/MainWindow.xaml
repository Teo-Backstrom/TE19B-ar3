<Window x:Class="FörstaWPFlabb.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:FörstaWPFlabb" mc:Ignorable="d" Title="MainWindow" Height="480" Width="270">
    <StackPanel Margin="5">
        <Label FontSize="30">Vänd på text</Label>
        <StackPanel Orientation="Vertical">
            <Label Margin="20">Ange en text</Label>
            <TextBox Margin="5" Width="200" Name="inputruta"></TextBox>
        </StackPanel>
        <Button Margin="5" Width="200" Height="30" Click="Skicka_Click">Kör</Button>
        <TextBlock Margin="20">Text omvänd</TextBlock>
        <TextBlock Margin="5" Background="#FFF" Height="100" TextWrapping="Wrap" Name="textruta"></TextBlock>
    </StackPanel>
</Window>