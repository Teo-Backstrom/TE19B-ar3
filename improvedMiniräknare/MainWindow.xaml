<Window x:Class="improvedMiniräknare.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:improvedMiniräknare" mc:Ignorable="d" Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label FontSize="25">Enkel miniräknare</Label>
        <StackPanel Orientation="Horizontal">
            <Label>Tal 1</Label>
            <TextBox Name="tal1" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Tal 2</Label>
            <TextBox Name="tal2" Width="200"></TextBox>
        </StackPanel>
        <DockPanel HorizontalAlignment="Stretch">
            <Button Width="50" Click="plus">+</Button>
            <Button Width="50" Click="minus">-</Button>
            <Button Width="50" Click="multi">*</Button>
            <Button Width="50" Click="dela">/</Button>
        </DockPanel>
        <Label>Resultat</Label>
        <TextBox Width="200" Name="resultat"></TextBox>
    </StackPanel>
</Window>